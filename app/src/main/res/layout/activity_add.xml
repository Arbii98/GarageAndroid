<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AddActivity"
    android:background="@drawable/bg3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="Ajouter une voiture"
                android:textSize="35dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/marque"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Marque" />

            <EditText
                android:id="@+id/modele"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/marque"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Modele" />

            <EditText
                android:id="@+id/matricule"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/modele"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Matricule" />

            <EditText
                android:id="@+id/proprietaire"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/matricule"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Nom et prÃ©nom proprietaire" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/proprietaire"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Telephone" />


            <Button
                android:id="@+id/add_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/proprietaire"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="@drawable/round_corners"
                android:text="Confirmer"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>